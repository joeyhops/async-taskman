{
  "compilerOptions": {
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "inlineSources": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "incremental": true
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "./lib/**/*.spec.ts"
  ],
  "compileOnSave": false
}